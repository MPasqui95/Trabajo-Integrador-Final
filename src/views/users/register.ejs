<!DOCTYPE html>
<html lang="en">
  <!-- ======== HEAD =================== -->
  <%- include('../partials/head.ejs') %>

  <body>
    <!-- ===== HEADER  ====== -->
    <%- include('../partials/header.ejs') %>

    <!-- ===== REGISTER FORM ====== -->
    <div class="rg-rg-register-form-container">
      <h3 class="rg-register-label">Registro</h3>
      <form action="POST" name="rg-register-form" class="rg-register-form">
        <input
          type="text"
          placeholder="Nombres"
          class="rg-form-input-text"
          name="nombres"
        />

        <input
          type="text"
          placeholder="Apellidos"
          name="apellido"
          class="rg-form-input-text"
        />

        <input
          type="email"
          placeholder="Correo electrónico"
          name="mail"
          class="rg-form-input-text"
        />

        <input
          type="password"
          placeholder="Contraseña"
          name="password"
          class="rg-form-input-text"
        />

        <input
          type="password"
          placeholder="Confirmar contraseña"
          name="password"
          class="rg-form-input-text"
        />

        <input
          type="text"
          placeholder="Dirección"
          name="direccion"
          class="rg-form-input-text"
        />
        <label class="label-input-date"
          >Fecha de Nacimiento
          <input
            type="date"
            name="fecha-nacimiento"
            class="rg-form-input-text"
          />
        </label>

        <label for="terminos" class="rg-boundaries-label">
          <input
            type="checkbox"
            name="terminos"
            id="terminos"
            class="rg-boundaries"
            required
          />
          <div class="rg-boundaries-txt">
            *He leido y acepto las condiciones de
            <span>tratamientos de mis datos personales</span>
          </div></label
        >

        <button type="submit" class="rg-register-form-button">
          Registrarme
        </button>
      </form>
    </div>

    <div class="rg-already-registered">
      <p>¿Ya estas registrado?</p>
      <a href="./login"> Inicia sesión aquí</a>
    </div>

    <!-- ======= FOOTER  ====== -->
    <%- include('../partials/footer.ejs') %>
  </body>
</html>
